      //-third part 
    section(class="lg:max-w-[30vw] xl:max-w-[20vw] block w-full float-right lg:order-3")
      div(class="border sticky top-[10vh]")
        h1(class="title") Najdi si lektora na míru
        //-price range
        form(action="/", method="GET" class="lg:text-lg xl:text-xl bg-[#02384D]")
          .wrapper
            .slider
              .progress
            .range-input
              input.range-min(id="rangeMin" type="range", min="0", max="10000", value="2500", step="100" onchange="onchangevalues1()")
              input.range-max(id="rangeMax" type="range", min="0", max="10000", value="7500", step="100" onchange="onchangevalues1()")
            .price-input
              .field
                span 
                input.input-min(id="inputMin" name="inputMin" type="number", value="2500" onchange="onchangevalues2()")
              .separator až
              .field
                input.input-max(id="inputMax" name="inputMax" type="number", value="7500" onchange="onchangevalues2()")
                span() Kč

            //- checkbox
          div(class="container w-[90%] mx-auto max-h-[30vh] lg:max-h-[50vh] overflow-y-auto") 
            h3.title Zvol si tag/tagy
            each n in tagArray
              .box
                input.checkbox(type="checkbox", id=""+n, value=""+n name="tag")
                label(for=""+n)= n
            .print
            p.text Vybral jsi: 
            p(class="value" id="tags")

          div(class="city container my-2 mx-auto")
            label(for="city") Město 
            input(type="text", name="city" id="city")
          button(type="submit" class="bg-[#74C7D3] rounded-lg block w-1/2 mx-auto mt-3") Odeslat

