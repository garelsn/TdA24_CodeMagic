        img(src="./img/TdA_ikony_napad_blue.png",
            alt="ikonka nápadu",
            class="w-1/5 float-right")
        div(class="mx-6  my-9 float-right text-center")
          p=tag3
          p=tag4

      div(class ="w-full pe-8 my-6") 
        img(src="./img/TdA_ikony_studium_white.png",
