extends layout

block content
  //- first part

  div(class="flex flex-col my-9 mx-8 w-10/12 lg:flex-row lg:my-0 lg:mx-0 lg:w-screen lg:h-screen")
    div(class ="w-full lg:w-1/3")
      //- logo
      img(src="./img/logo.png",
          alt="logo",
          class="w-1/3 mb-20 lg:w-5/12 lg:ml-12 lg:mt-11")

      //- full_name
      h1(class="text-xl font-extrabold w-full text-center mb-10 lg:hidden")= full_name

      //- img
      div(class="flex-row lg:ml-24")
        div(class="relative w-3/6 lg:w-4/6")
          img(src=picture_url, 
              alt= full_name 
              class="rounded-full relative w-96")
          img(src="./img/sipka.png",
              alt="ikonka šipky",
              class="rotate-[85deg] w-3/12 absolute left-[8%] bottom-[-10%] lg:w-[17.777%] lg:bottom-0")


        ul(class="w-1/2 text-white  list-outside lg:hidden")
          each n in claim
            li=n
          li= "Lokace: "+location
          li="Cena za hodinu: "+price_per_hour


      //- contackt   list-image-[url(../img/sipka.png)]     
      div(class="hidden lg:block lg:text-justify lg:w-7/12 lg:mt-32 lg:ml-12")
        h2(class="lg:text-4xl lg:uppercase lg:text-white")="Kontakt"
        p(class="lg:my-2")= telephone_numbers
        p(class="lg:my-2")=emails
    //- second part

    div(class="flex flex-col w-full mt-16 lg:w-1/3") 
      h1(class="hidden lg:text-4xl lg:font-extrabold lg:my-16 lg:w-max lg:relative lg:block")= full_name
      div(class="text-base lg:text-3xl lg:w-[90%]")
        != bio
      ul(class="hidden lg:block lg:w-1/2 lg:text-white lg:list-outside")
        li= "Lokace: "+location
        li="Cena za hodinu: "+price_per_hour
      ul(class="hidden lg:block lg:w-1/2 lg:text-white lg:list-outside ")
        each n in claim
          li=n

    //- second part    h1= location
    //- second part    p= claim
    
    //- third part
    div(class="flex flex-col w-full mt-2 lg:w-1/3 lg:mt-36")

      div(class ="w-full relative lg:w-[80%]") 
        img(src="./img/TdA_ikony_pocitac_white.png",
            alt="ikonka počítače",
            class="absolute w-20 -left-2 bottom-0 lg:w-24 lg:left-0 animate-pulse")
        div(class="text-center text-base w-1/2 mx-auto mt-1 lg:ml-40 lg:text-xl")
          p(class="lg:mb-5")= tag1
          p= tag2

      div(class ="w-full relative mt-14 lg:mt-16 lg:w-[80%]") 
        img(src="./img/TdA_ikony_napad_blue.png",
            alt="ikonka nápadu",
            class="absolute w-20 -right-2 bottom-0 lg:w-24 lg:-right-20 animate-pulse")
        div(class="text-center text-base w-1/2 mx-auto mt-1 lg:ml-40 lg:text-xl")
          p(class="lg:mb-5")=tag3
          p=tag4

      div(class ="w-full relative mt-14 lg:mt-16 lg:w-[80%]") 
        img(src="./img/TdA_ikony_studium_white.png",
            alt="ikonka studia",
            class="absolute w-20 -left-2 bottom-0 lg:w-24 lg:left-0 animate-pulse")
        div(class="text-center text-base w-1/2 mx-auto mt-1 lg:ml-40 lg:text-xl")
          p(class="lg:mb-5")=tag5
          p=tag6


      div(class ="w-full relative mt-14 lg:mt-16 lg:w-[80%]") 
        img(src="./img/TdA_ikony_konverzace_blue.png",
            alt="ikonka konverzace",
            class="absolute w-20 -right-0 bottom-0 lg:w-24 lg:-right-20 animate-pulse")
        div(class="text-center text-base w-1/2 mx-auto mt-1 lg:ml-40 lg:text-xl")
          p(class="lg:mb-5")=tag7
          p=tag9

  
      div(class ="w-full relative mt-14 lg:mt-16 lg:w-[80%]") 
        img(src="./img/TdA_ikony_nastaveni_white.png",
            alt="ikonka nastavení",
            class="absolute w-20 -left-2 bottom-0 lg:w-24 lg:left-0 animate-pulse")
        div(class="text-center text-base w-1/2 mx-auto mt-1 lg:ml-40 lg:text-xl")
          p(class="lg:mb-5")=tag8
          p=tag11
      div(class="w-full mt-20 text-center lg:hidden")
        h2(class="text-4xl uppercase text-white")="Kontakt"
        p(class="mt-2")= telephone_numbers
        p(class="mt-1")=emails
