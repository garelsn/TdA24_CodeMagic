extends layout

block content
  //- first part

  div(class="flex flex-row")
    div(class ="ml-4 w-1/3")
      img(src="./img/logo.png",
          alt="logo",
          class="w-1/3 mb-20")
      div(class="relative h-auto my-24")
        img(src=picture_url, 
            alt= full_name 
            class="rounded-full relative w-96")
        img(src="./img/sipka.png",
            alt="ikonka šipky",
            class="rotate-90 w-20 absolute left-0 bottom-0")
      h2(class="text-4xl uppercase text-white text-center w-7/12")="Kontakt"
      p(class="text-center w-7/12 my-2")= telephone_numbers
      p(class="text-center w-7/12 my-2")=emails
