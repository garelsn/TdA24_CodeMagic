    div(class="flex flex-col w-1/3")
      div(class="mt-20")  
        h1(class="text-5xl font-bold mb-12")= full_name
        div(class="w-4/5 mx-auto text-xl")
          != bio
          h1= location
          p= claim
    
    //- third part
    div(class="flex flex-col w-1/3")
      div(class ="w-full pe-8 my-6") 
        img(src="./img/TdA_ikony_pocitac_white.png",
            alt="ikonka počítače",
            class="w-1/5 float-left")
        div(class="mx-6 my-6 float-left text-center")
